@model YummyProject.Models.PhotoGallery

@{
    ViewBag.Title = "Fotoğraf Ekle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<style>
    label {
        font-weight: bold;
    }

    .form-group {
        margin-bottom: 20px;
    }
</style>

<br />
<h2 class="mb-4">@ViewBag.Title</h2>

@using (Html.BeginForm("AddPhotoGallery", "PhotoGallery", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Error
        </div>
    }

    <div class="form-group">
        <label for="imageFile">Görsel Seç</label>
        <input type="file" name="imageFile" class="form-control" accept=".jpg,.jpeg,.png,.gif" id="imageFile" />
        @Html.ValidationMessage("ImageUrl", "", new { @class = "text-danger" })
        <small class="form-text text-muted">Sadece .jpg, .jpeg, .png veya .gif dosyaları yükleyebilirsiniz.</small>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Ekle</button>
        <a href="@Url.Action("Index", "PhotoGallery")" class="btn btn-secondary">İptal</a>
    </div>
}
