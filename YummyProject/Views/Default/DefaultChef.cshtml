@model List<YummyProject.Models.Chef>

<section id="chefs" class="chefs section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Şefler</h2>
        <p><span>İşinin Uzmanı</span> <span class="description-title">Şeflerimiz<br></span></p>
    </div><!-- End Section Title -->

    <div class="container">

        <div class="row gy-4">

            @foreach (var chef in Model)
            {
            <div class="col-lg-4 d-flex align-items-stretch" data-aos="fade-up" data-aos-delay="100">
                <div class="team-member">
                    <div class="member-img">
                        <img src="@chef.ImageUrl" class="img-fluid" alt="@chef.Name">
                        <div class="social">
                            @foreach (var social in chef.ChefSocials)
                            {
                            <a href="@social.Url" title="@social.SocialMediaName"><i class="@social.Icon"></i></a>
                            }
                        </div>
                    </div>
                    <div class="member-info">
                        <h4>@chef.Name</h4>
                        <span>@chef.Title</span>
                        <p>@chef.Description</p>
                    </div>
                </div>
            </div><!-- End Chef Team Member -->
            }

        </div>

    </div>

</section>
