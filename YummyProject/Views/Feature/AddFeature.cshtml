@model YummyProject.Models.Feature
@{
    ViewBag.Title = "Yeni Öne Çıkan Alan Ekle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<br />
<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("AddFeature", "Feature", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <br />
        <strong><label>Başlık</label></strong>
        @Html.TextBoxFor(model => model.Title, new { @class = "form-control", placeholder = "Başlığı buraya girin" })
        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
    </div>

    <br />
    <div class="form-group">
        <strong><label>Açıklama</label></strong>
        @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = 5, placeholder = "Açıklamayı buraya girin" })
        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
    </div>

    <br />
    <div class="form-group">
        <strong><label>Video Url</label></strong>
        @Html.TextBoxFor(model => model.VideoUrl, new { @class = "form-control", placeholder = "Buraya videonun url adresini giriniz." })
        @Html.ValidationMessageFor(model => model.VideoUrl, "", new { @class = "text-danger" })
    </div>

    <br />
    <div class="form-group">
        <strong><label>Görsel Yükleyin</label></strong>
        <input type="file" name="file" class="form-control" accept=".jpg,.jpeg,.png,.gif" />
        <small class="form-text text-muted">Sadece .jpg, .jpeg, .png, .gif dosyaları yükleyebilirsiniz.</small>
    </div>

    if (!string.IsNullOrEmpty(ViewBag.error))
    {
        <br />
        <div class="text-danger">@ViewBag.error</div>
    }

    <br />
    <button type="submit" class="btn btn-primary">Kaydet</button>
}