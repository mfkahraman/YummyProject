@model YummyProject.Models.Feature

@{
    ViewBag.Title = "Update Feature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center">@ViewBag.Title</h2>
    <form class="form-group mt-4" method="post" enctype="multipart/form-data">

        <div class="form-group">
            @Html.LabelFor(x => x.FeatureId, new { @class = "font-weight-bold" })
            @Html.TextBoxFor(x => x.FeatureId, new { @class = "form-control", @readonly = "readonly" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Title, new { @class = "font-weight-bold" })
            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Description, new { @class = "font-weight-bold" })
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control", rows = 5 })
            @Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.VideoUrl, new { @class = "font-weight-bold" })
            @Html.TextBoxFor(x => x.VideoUrl, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.VideoUrl, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label class="font-weight-bold">Current Image</label>
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div>
                    <img src="@Url.Content(Model.ImageUrl)" alt="Feature Image" class="img-thumbnail" style="max-width: 200px; height: auto;" />
                </div>
            }
            else
            {
                <p class="text-muted">No image available</p>
            }
        </div>

        <div class="form-group">
            @Html.Label("Upload New Image", new { @class = "font-weight-bold" })
            <input type="file" name="ImageUrl" class="form-control" />
            @Html.ValidationMessageFor(x => x.ImageUrl, "", new { @class = "text-danger" })
        </div>

        <div class="form-group text-center">
            <button type="submit" class="btn btn-primary btn-lg">Update Feature</button>
            <a href="@Url.Action("Index", "Feature")" class="btn btn-secondary btn-lg">Cancel</a>
        </div>

    </form>
</div>
