@model YummyProject.Models.Category

@{
    ViewBag.Title = "Ürün Ekle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<style>
    label {
        font-weight: bold;
    }

    .form-group {
        margin-bottom: 20px;
    }
</style>

<br />
<h2 class="mb-4">@ViewBag.Title</h2>

@using (Html.BeginForm("AddCategory", "Category", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Error
        </div>
    }

    <div class="form-group">
        <label for="CategoryName">Kategori Adı</label>
        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control", @id = "CategoryName" })
        @Html.ValidationMessageFor(x => x.CategoryName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Ekle</button>
        <a href="@Url.Action("Index", "Category")" class="btn btn-secondary">İptal</a>
    </div>
}
